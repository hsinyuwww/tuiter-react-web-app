<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/groupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group - 4"
        app:layout_constraintBottom_toTopOf="@+id/groupNames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/groupNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bini - Dheekksha - Hsin-Yu - Vinoothna"
        app:layout_constraintBottom_toTopOf="@+id/buttonA6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupId" />

    <Button
        android:id="@+id/buttonA6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A 6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupNames"
        android:onClick="launchA6Activity"/>

</androidx.constraintlayout.widget.ConstraintLayout>